@require '../../../style/var.styl';

.igo-panel-header {
  height: $igo-panel-header-height;
  padding: $igo-panel-header-padding;
  text-align: center;
}

.igo-panel-header h3 {
  margin: $igo-panel-header-padding 0;
  height: $igo-icon-size;
}

.igo-panel-header >>> [panelleftbutton] {
  float: left;
}

.igo-panel-header >>> [panelrightbutton] {
  float: right;
}

.igo-panel-content {
  height: "calc(100% - %s)" % $igo-panel-header-height;
  overflow: auto;
}

.igo-panel-title {
  display: inline-block;
  max-width: calc(100% - 80px);
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
  padding: 9px 0;
}
