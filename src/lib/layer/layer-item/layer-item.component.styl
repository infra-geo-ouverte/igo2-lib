@require '../../../style/var.styl';
@require '../../../style/media.styl';
@require '../../shared/collapsible/collapsible.component.styl';

:host {
  overflow: hidden;
}

.igo-layer-actions-container,
.igo-layer-legend-container {
  width: 100%;
  display: inline-block;
}

.igo-layer-actions-container {
  bordered-top();
  bordered-bottom();
}

.igo-layer-actions-container > div {
  text-align: center;
}

.igo-layer-legend-container {
  padding-left: $igo-layer-legend-padding-left;
}

#opacity-slider {
  width: 100%;

  +media(mobile) {
    width: 70%;
  }
}

.igo-layer-button-group {
  float: right;
  padding: 0 $igo-list-item-padding;

  +media(mobile) {
    float: none;
  }
}

mat-icon.disabled {
  color: rgba(0,0,0,.38);
}
