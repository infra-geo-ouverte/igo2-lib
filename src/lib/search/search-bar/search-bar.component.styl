@require '../../../style/var.styl';

:host {
  position: relative;
  display: block;
}

mat-form-field {
  width: 100%;
}

input {
  width: calc(100% - $igo-icon-size);
}

.searchButtonDiv {
  position: absolute;
  right: 0;
  top: 0;
  & > button:nth-child(2)::before {
    content: "";
    position: absolute;
    left: 0px;
    top: 5px;
    border-right: 1px solid #ddd;
    height: 28px;
  }
}
