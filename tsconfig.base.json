{
  "compileOnSave": false,
  "compilerOptions": {
    "allowSyntheticDefaultImports": true, // for jspdf and moment
    "skipLibCheck": true,
    "baseUrl": "./",
    "downlevelIteration": true,
    "importHelpers": true,
    "module": "es2020",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2015",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "paths": {
      "@igo2/*": ["dist/*"]
    }
  }
}
