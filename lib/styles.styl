media_queries = {
  mobile  : "only screen and (max-width: 400px)",
  tablet  : "only screen and (min-width: 401px) and (max-width: 800px)",
  desktop : "only screen and (min-width: 801px)"
}

media(breakpoints)
  $conditions = ()
  for breakpoint in breakpoints
    push($conditions, media_queries[breakpoint])
  $conditions = join(", ", $conditions)
  @media $conditions
    {block}

$igo-margin = 5px;
$igo-padding = 5px;
$igo-icon-size = 40px;

.igo-col {
  float: left;

  +media(mobile) {
    text-align: center;
  }
}

.igo-col-10 {
  width: 10%;
}

.igo-col-20 {
  width: 20%;
}

.igo-col-30 {
  width: 30%;
}

.igo-col-40 {
  width: 40%;
}

.igo-col-50 {
  width: 50%;
}

.igo-col-60 {
  width: 60%;
}

.igo-col-70 {
  width: 70%;
}

.igo-col-80 {
  width: 80%;
