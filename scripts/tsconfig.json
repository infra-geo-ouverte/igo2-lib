{
  "compilerOptions": {
    "lib": ["es2022"],
    "module": "NodeNext",
    "target": "es2022",
    "rootDir": "./",
    "isolatedModules": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "NodeNext"
  },
  "exclude": ["node_modules"],
  "ts-node": {
    "swc": true
  }
}
