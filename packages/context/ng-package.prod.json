{
  "$schema": "../../node_modules/ng-packagr/ng-package.schema.json",
  "dest": "../../dist/context",
  "lib": {
    "entryFile": "src/public_api.ts"
  },
  "allowedNonPeerDependencies": ["ts-md5"],
  "assets": [
    { "input": "src", "glob": "*.scss", "output": "" },
    { "input": "src/lib", "glob": "**/*.theming.scss", "output": "lib" },
    { "input": "src/locale", "glob": "*", "output": "locale" }
  ]
}
