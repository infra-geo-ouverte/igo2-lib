{
  "$schema": "../../node_modules/ng-packagr/ng-package.schema.json",
  "dest": "../../dist/core",
  "deleteDestPath": false,
  "lib": {
    "entryFile": "src/public_api.ts"
  },
  "allowedNonPeerDependencies": ["@ngx-translate"],
  "assets": [
    { "input": "src", "glob": "*.scss", "output": "" },
    { "input": "src/lib", "glob": "**/*.theming.scss", "output": "lib" },
    { "input": "src/assets", "glob": "**/*", "output": "assets" },
    { "input": "src/style/partial", "glob": "**/*.scss", "output": "style/partial" },
    { "input": "src/locale", "glob": "*", "output": "locale" },
    { "input": "node_modules/@mdi/angular-material", "glob": "mdi.svg", "output": "assets/icons" }
  ]
}
